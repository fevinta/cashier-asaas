{
    "name": "fevinta/cashier-asaas",
    "description": "Laravel Cashier integration for Asaas payment gateway (Brazil)",
    "keywords": ["laravel", "cashier", "asaas", "payment", "subscription", "brazil", "pix", "boleto"],
    "license": "MIT",
    "authors": [
        {
            "name": "Fernando Vintacourt",
            "email": "vintacourtfernando@gmail.com"
        }
    ],
    "homepage": "https://github.com/fevinta/cashier-asaas",
    "support": {
        "issues": "https://github.com/fevinta/cashier-asaas/issues",
        "source": "https://github.com/fevinta/cashier-asaas"
    },
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "illuminate/http": "^11.0|^12.0",
        "illuminate/routing": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0"
    },
    "require-dev": {
        "larastan/larastan": "^3.8",
        "laravel/pint": "^1.0",
        "moneyphp/money": "^4.8",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Fevinta\\CashierAsaas\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fevinta\\CashierAsaas\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest --testsuite=Unit --testsuite=Feature",
        "test-all": "pest",
        "test-coverage": "pest --testsuite=Unit --testsuite=Feature --coverage",
        "analyse": "phpstan analyse",
        "lint": "pint",
        "lint-check": "pint --test"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Fevinta\\CashierAsaas\\CashierAsaasServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
